<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HotelesAmpliados">
    <TextView
        android:id="@+id/tituloampliadohoteles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="PRUEBA TITULO"
        android:textSize="22dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.05"/>
    <ImageView
        android:id="@+id/fotoampliandohoteles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tituloampliadohoteles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:src="@drawable/fotomolde"
        android:adjustViewBounds="true"
/>

    <TextView
        android:id="@+id/preciohotelmolde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contacto: 302 3558736"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fotoampliandohoteles"
        app:layout_constraintVertical_bias="0.082" />

    <TextView
        android:id="@+id/calificacionampliandohoteles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calificacion: 5"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.631"
        app:layout_constraintStart_toEndOf="@id/preciohotelmolde"
        app:layout_constraintTop_toBottomOf="@id/fotoampliandohoteles"
        app:layout_constraintVertical_bias="0.082" />

    <TextView
        android:id="@+id/descripcionhotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="descripcion:prueba de descripcion de hoteles"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calificacionampliandohoteles"
        app:layout_constraintVertical_bias="0.148" />

    <TextView
        android:id="@+id/telefonoHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="telefono:3023590047"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.032"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descripcionhotel"
        app:layout_constraintVertical_bias="0.153" />

    <TextView
        android:id="@+id/direccionHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="96dp"
        android:text="direccion:54#02-82"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/telefonoHotel" />

    />
</androidx.constraintlayout.widget.ConstraintLayout>