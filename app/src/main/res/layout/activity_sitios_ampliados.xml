<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SitiosAmpliados">
    <TextView
        android:id="@+id/tituloSitios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="PRUEBA TITULO"
        android:textSize="22dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.05"/>
    <ImageView
        android:id="@+id/imagenSitios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tituloSitios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:src="@drawable/moldesitios"
        android:adjustViewBounds="true"
        />
    <TextView
        android:id="@+id/calificacionSitios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="calificacion: 5"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagenSitios"
        app:layout_constraintVertical_bias="0.082" />
    <TextView
        android:id="@+id/nombreGuia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guia: juan perez"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.631"
        app:layout_constraintStart_toEndOf="@id/calificacionSitios"
        app:layout_constraintTop_toBottomOf="@id/imagenSitios"
        app:layout_constraintVertical_bias="0.082" />
    <TextView
        android:id="@+id/descripcionSitios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="descripcion:prueba de descripcion de sitios"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nombreGuia"
        app:layout_constraintVertical_bias="0.148" />

    <TextView
        android:id="@+id/contactoSitios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contacto:3023590047"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descripcionSitios"
        app:layout_constraintVertical_bias="0.133" />
</androidx.constraintlayout.widget.ConstraintLayout>